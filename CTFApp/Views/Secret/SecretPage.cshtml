@{
    ViewData["Title"] = "Link Testing";
}

<h1>Link Testing</h1>
<p>Submit a link, and our admin bot will visit it.</p>

<form method="POST" action="/secret/submit">
    <label for="url">Enter a link:</label>
    <input type="url" id="url" name="url" required />
    <button type="submit">Submit</button>
</form>

@if (ViewBag.ConfirmationMessage != null)
{
    <p id="confirmationMessage">@ViewBag.ConfirmationMessage</p>
}
